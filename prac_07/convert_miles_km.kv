BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: "34"
            multiline: False

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.3, 1
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_number.text, -1)

    Button:
        text: "Convert miles to km"
        on_press: app.handle_convert(input_number.text)
    Label:
        id: output_label
        text: '54.717'
        color: (1, 1, 0, 1)
